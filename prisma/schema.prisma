// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  role          String   @default("user")
  events        Events[]
}

model Guest {
  id            Int       @id @default(autoincrement())
  min           Int
  max           Int
  venues        Venues[]
  events        Events[]
}

model Venues {
  id            Int       @id @default(autoincrement())
  name          String    @unique
  location      String
  price         Int
  guest         Guest     @relation(fields : [guestCountId], references : [id])
  guestCountId  Int
  picture       String
  events        Events[]
}

model Food {
  id            Int       @id @default(autoincrement())
  name          String    @unique
  category      String
  price         Int
  picture       String
  event_foods   Event_foods[]
}

model Equipment {
  id                  Int       @id @default(autoincrement())
  name                String    @unique
  price               Int
  picture             String
  event_equipment     Event_equipment[]
}

model Events {
  id                    Int       @id @default(autoincrement())
  event_type            String
  guest                 Guest     @relation(fields : [guestCountId], references : [id])
  guestCountId          Int
  event_environment     String
  venue                 Venues    @relation(fields : [venueId], references : [id])
  venueId               Int
  user                  User      @relation(fields : [userId], references : [id])
  userId                Int
  phone_number          String
  date                  DateTime
  total_price           Int
  advance_payment       Int
  payment_status        String
  event_status          String
  event_foods           Event_foods[]
  event_equipment       Event_equipment[]
}

model Event_foods {
  id            Int       @id @default(autoincrement())
  event         Events    @relation(fields : [eventId], references : [id])
  eventId       Int
  food          Food      @relation(fields : [foodId], references : [id])
  foodId        Int
}

model Event_equipment {
  id            Int         @id @default(autoincrement())
  event         Events      @relation(fields : [eventId], references : [id])
  eventId       Int
  equipment     Equipment   @relation(fields : [equipmentId], references : [id])
  equipmentId   Int
}
